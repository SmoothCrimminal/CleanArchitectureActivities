<MudToolBar>
    @foreach(var attendee in Attendees)
    {
        <MudImage Src="@(string.IsNullOrWhiteSpace(attendee.Image) ? "/images/user.png" : attendee.Image)" Height="50" Style="border-radius: 50%; cursor: pointer; margin-right: 20px" @onclick="() => HandleClick(attendee)"/>

        <MudPopover Open="_popupOpen" AnchorOrigin="Origin.TopRight">
            <Profile ProfileViewModel="_currentlyViewedAttendee"/>
        </MudPopover>
    }
</MudToolBar>