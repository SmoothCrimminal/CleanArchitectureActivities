<MudToolBar>
    @foreach(var attendee in Attendees)
    {
        <MudIconButton Size="Size.Large" Icon="@Icons.Material.Rounded.Person" OnClick="() => _popupOpen = !_popupOpen"/>

        <MudPopover Open="_popupOpen" AnchorOrigin="Origin.TopRight">
            <Profile ProfileViewModel="@attendee"/>
        </MudPopover>
    }
</MudToolBar>