@if (Activity is not null)
{
    <MudGrid>
        <MudItem xs="8" Style="display: flex; flex-direction: column; gap: 40px">
            <ActivityDetailsHeader @bind-Activity="@Activity" />
            <ActivityDetailsInfo Activity="@Activity" />
            <ActivityDetailsChat ActivityId="@Activity.Id"/>
        </MudItem>
        <MudItem xs="4">
            <ActivityDetailsSidebar Activity="@Activity"/>
        </MudItem>
    </MudGrid>
}
