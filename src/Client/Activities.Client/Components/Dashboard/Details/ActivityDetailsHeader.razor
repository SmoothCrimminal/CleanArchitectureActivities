<MudCard>
    <div style="position: relative;">
        <MudCardMedia Image="@($"/images/categoryImages/{Activity.Category}.jpg")" Style="filter: brightness(30%)"/>

        <div style="position: absolute; bottom: 5%; left: 5%; height: auto; color: white; width: 100%">
            <MudText Typo="Typo.h5">@Activity.Title</MudText>
            <MudText Typo="Typo.caption">@Activity.Date</MudText>
            <MudText Typo="Typo.body2">Hosted by <b>Bob</b></MudText>
        </div>
    </div>
    <MudCardActions Style="display: flex; gap: 10px; height: 80px; align-items: flex-end">
        <MudButton Color="Color.Info" Variant="Variant.Filled">Join Activity</MudButton>
        <MudButton Color="Color.Surface" Variant="Variant.Filled">Cancel attendance</MudButton>
        <MudButton Color="Color.Warning" Variant="Variant.Filled" Style="margin-left: auto">Manage Event</MudButton>
    </MudCardActions>
</MudCard>