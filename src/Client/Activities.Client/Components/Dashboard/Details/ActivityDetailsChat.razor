<MudCard>
    <MudCardHeader Style="background-color: mediumaquamarine">
        <CardHeaderContent>
            <MudText Typo="Typo.h6" Style="color: white; text-align: center;">Chat about this event</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <Comment Author="Matt" TimeOfPosting="@DateTime.Now.AddHours(-5)" CommentContent="How artistic!"/>
        <Comment Author="Joe Henderson" TimeOfPosting="@DateTime.Now.AddDays(-2)" CommentContent="Dude, this is awesome. Thanks so much"/>
    </MudCardContent>
    <MudCardContent>
        <MudTextField Lines="10" T="string" Variant="Variant.Outlined"/>
    </MudCardContent>
    <MudCardActions>
        <MudButton StartIcon="@Icons.Material.Filled.Edit" Color="Color.Info" Variant="Variant.Filled">Add Reply</MudButton>
    </MudCardActions>
</MudCard>