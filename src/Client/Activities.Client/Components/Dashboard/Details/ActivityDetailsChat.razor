<MudCard>
    <MudCardHeader Style="background-color: mediumaquamarine">
        <CardHeaderContent>
            <MudText Typo="Typo.h6" Style="color: white; text-align: center;">Chat about this event</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        @foreach (var comment in _comments)
        {
            <Comment Author="@comment.DisplayName" TimeOfPosting="@comment.CreatedAt" CommentContent="@comment.Body" AvatarSrc="@comment.Image"/>
        }
    </MudCardContent>
    <MudCardContent>
        <MudTextField Lines="10" T="string" Variant="Variant.Outlined" @bind-Text="_commentBody" />
    </MudCardContent>
    <MudCardActions>
        <MudButton StartIcon="@Icons.Material.Filled.Edit" Color="Color.Info" Variant="Variant.Filled" Disabled="@string.IsNullOrWhiteSpace(_commentBody)" OnClick="AddComment">Add Reply</MudButton>
    </MudCardActions>
</MudCard>