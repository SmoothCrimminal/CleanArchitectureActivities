<MudTabs Border="true" Position="Position.Right" SliderColor="Color.Info">
    <MudTabPanel Text="About">
        <AboutForm @bind-ProfileViewModel="Profile" IsCurrentUser="IsCurrentUser"/>
    </MudTabPanel>
    <MudTabPanel Text="Photos">
        <ProfilePhotos @bind-Profile="Profile" IsCurrentUser="IsCurrentUser"/>
    </MudTabPanel>
    <MudTabPanel Text="Events">
        <MudPaper Width="95%" Style="padding: 10px">
            <MudText>Events Content</MudText>
        </MudPaper>
    </MudTabPanel>
    <MudTabPanel Text="Followers">
        <ProfileFollowers Profile="Profile" />
    </MudTabPanel>
    <MudTabPanel Text="Following">
        <ProfileFollowings Profile="Profile"/>
    </MudTabPanel>
</MudTabs>