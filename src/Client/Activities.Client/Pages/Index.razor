@page "/"

<div class="homePage">
    <div style="display: flex; justify-content: center; align-items: center; gap: 10px">
        <MudImage Src="images/logo.png" Style="margin-bottom: 12px" />
        <MudText Typo="Typo.h3" Style="color: white">Clean Activities</MudText>
    </div>
    <MudText Typo="Typo.h4" Style="margin-bottom: 10px">Welcome to Clean Activities</MudText>
    <AuthorizeView>
        <NotAuthorized>
            <div style="display: flex; justify-content: center; gap: 10px">
                <MudButton Size="Size.Large" Href="/Login" Variant="Variant.Outlined">Login</MudButton>
                <MudButton Size="Size.Large" Href="/Register" Variant="Variant.Outlined">Register</MudButton>
            </div>
        </NotAuthorized>
        <Authorized>
            <MudButton Size="Size.Large" Href="/Activities" Variant="Variant.Outlined">Take me to activities!</MudButton>
        </Authorized>
    </AuthorizeView>
</div>

<style>
    .homePage {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-image: linear-gradient(
            135deg,
            rgb(24, 42, 115) 0%,
            rgb(33, 138, 174) 69%,
            rgb(32, 167, 172) 89%
        ) !important;
        height: 100vh;
        width: 100vw;
    }
</style>